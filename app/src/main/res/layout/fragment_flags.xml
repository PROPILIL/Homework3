<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/to_flags_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/austria"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/teal_200"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:background="@color/red" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:background="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poland"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/teal_200"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/italy"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/austria">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/italy_green" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/italy_white" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/italy_red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/columbia"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poland">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:background="@color/columbia_yellow"
            android:layout_weight="0.5"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="0.25"
            android:background="@color/columbia_blue" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.25"
            android:background="@color/columbia_red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/madagascar"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/italy">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:background="@color/madagascar_red" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:background="@color/madagascar_green" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thailand"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/columbia">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="top"
            android:background="@color/thailand_red" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:background="@color/thailand_blue"
            android:layout_marginVertical="15dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:background="@color/thailand_red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/denmark"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/madagascar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_marginBottom="7.5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_marginEnd="7.5dp"
                android:background="@color/denmark_red"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginStart="7.5dp"
                android:background="@color/denmark_red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_marginTop="7.5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_marginEnd="7.5dp"
                android:background="@color/denmark_red"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginStart="7.5dp"
                android:background="@color/denmark_red"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/switzerland"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="@color/switzerland_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thailand">

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>